<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_botones"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".splash">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/icono_app"
        android:layout_marginBottom="20dp"/>
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="@dimen/sizeTitle"
        android:layout_marginBottom="10dp"
        android:textColor="@color/color_fondo"
        android:text="MATA CALABAZAS"/>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieMovimiento"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:textAlignment="center"
        app:lottie_autoPlay="true"
        app:lottie_fileName="cargando.json"
        app:lottie_imageAssetsFolder="assets"
        app:lottie_loop="true" />
</LinearLayout>